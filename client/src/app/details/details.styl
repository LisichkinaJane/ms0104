.detail-container
    position: relative
    left 0
    right 0
    margin 0px auto
    top 50px
    height 600px
    width 950px
    background #f8f8f4
    padding 2%
    border-radius 5%
    overflow-y scroll
    
.main-form-wrapper
    width 100%
    height 100%
    background rgba(27, 31, 35, 0.6)
    top 0
    left 0
